<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <div class="info">
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Actor</h1>
    <br>
    <section class="formulario">
        <form action="/actors/create" method="POST">
            <label for="first_name">Name </label>
            <p><input type="text" name="first_name" id="first_name" required></p>
            <label for="last_name">First Name </label>
            <p><input type="text" name="last_name" id="last_name" required></p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="rating" required> </p>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="awards" required></p>
      
           
           
            <label for="genreID">Movies </label>
            <p>
                <select name="genre_id" id="genre_id" required>
                    <option value="genre_id" disabled selected>- select movie - </option>
                    <% allMovies.forEach(movie => { %>
                    <option value="<%= movie.id %>"><%= movie.title %></option>
                    <% }); %>
                </select>
            </p>
            <br>
            <p class="botones"> 
                <a class="botonVolver" href="/">Inicio</a>
                <button class="botonAgregar" type="submit">Agregar</button>
                <a class="botonVolver" href="/actors">Actores</a>
            
            <a  class="botonVolver" href="/movies">Pel√≠culas</a></p>
        </form>
    </section>
    </div>
</body>

</html>